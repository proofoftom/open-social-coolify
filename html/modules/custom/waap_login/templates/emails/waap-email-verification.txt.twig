{#
/**
 * @file
 * WaaP Login - Email Verification Plain Text Template
 *
 * Variables:
 * - verification_url: Full URL to email verification endpoint
 * - user_name: User's display name or username
 * - wallet_address: Ethereum wallet address (formatted)
 * - site_name: Site name from Drupal config
 * - expiration_hours: Hours until verification link expires (24)
 */
#}
{{ 'Verify Your Email Address'|t }}
{{ '='|repeat(60) }}

{{ 'Hello %user_name,'|t({ '%user_name': user_name }) }}

{{ 'Thank you for signing up with WaaP (Wallet as a Protocol) on %site_name.'|t({ '%site_name': site_name }) }}
{{ 'Please verify your email address to complete your account setup.'|t }}

{{ '-'|repeat(60) }}

{{ 'Wallet Address:'|t }}
{{ wallet_address }}

{{ '-'|repeat(60) }}

{{ 'To verify your email address, please click the link below:'|t }}
{{ verification_url }}

{{ 'If the button above does not work, you can copy and paste the following URL into your web browser:'|t }}
{{ verification_url }}

{{ '-'|repeat(60) }}

{{ 'Important Information:'|t }}

{{ '* This verification link will expire in %hours hours.'|t({ '%hours': expiration_hours }) }}
{{ '* If you did not request this verification, please ignore this email.'|t }}
{{ '* Your account will not be created until you verify your email address.'|t }}

{{ '-'|repeat(60) }}

{{ 'If you have any questions or need assistance, please contact the site administrator.'|t }}

{{ '-'|repeat(60) }}

{{ site_name }} | {{ 'Powered by WaaP'|t }}

{{ '='|repeat(60) }}
