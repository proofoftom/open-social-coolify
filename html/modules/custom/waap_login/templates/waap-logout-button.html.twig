{#
/**
 * @file
 * Default theme implementation for WaaP logout button.
 *
 * Available variables:
 * - username: User's display name
 * - wallet_address: Ethereum wallet address (0x...)
 * - user_email: User's email address
 * - user_profile_url: URL to user profile page
 *
 * @ingroup themeable
 */
#}
<div class="waap-login-block waap-login-block--authenticated" role="region" aria-label="{{ 'WaaP User Account'|t }}">
  <div class="waap-user-container">
    {# User information display #}
    <div class="waap-user-info" role="status" aria-live="polite">
      {% if username %}
        <div class="waap-user-info__username">
          <span class="waap-user-info__label" aria-hidden="true">{{ 'Username:'|t }}</span>
          <span class="waap-user-info__value">{{ username|e }}</span>
        </div>
      {% endif %}

      {% if wallet_address %}
        <div class="waap-user-info__address">
          <span class="waap-user-info__label" aria-hidden="true">{{ 'Wallet:'|t }}</span>
          <span class="waap-user-info__value" data-wallet-address="{{ wallet_address|e }}">
            {# Format wallet address: 0x1234...5678 #}
            {{ wallet_address[:6] }}...{{ wallet_address[- 4:] }}
          </span>
        </div>
      {% endif %}

      {% if user_email %}
        <div class="waap-user-info__email">
          <span class="waap-user-info__label" aria-hidden="true">{{ 'Email:'|t }}</span>
          <span class="waap-user-info__value">{{ user_email|e }}</span>
        </div>
      {% endif %}
    </div>

    {# Action buttons #}
    <div class="waap-user-actions">
      {# User profile link #}
      {% if user_profile_url %}
        <a href="{{ user_profile_url }}" class="waap-user-actions__profile" aria-label="{{ 'View your profile'|t }}" title="{{ 'Go to your profile page'|t }}">
          <span class="waap-user-actions__icon" aria-hidden="true"></span>
          <span class="waap-user-actions__text">{{ 'Profile'|t }}</span>
        </a>
      {% endif %}

      {# Logout button #}
      <button type="button" class="waap-logout-button js-waap-logout" aria-label="{{ 'Logout from WaaP'|t }}" title="{{ 'Click to disconnect your WaaP wallet'|t }}">
        <span class="waap-logout-button__icon" aria-hidden="true"></span>
        <span class="waap-logout-button__text">{{ 'Disconnect'|t }}</span>
      </button>
    </div>
  </div>
</div>
