{
    "name": "goalgorilla/open-social-project",
    "description": "Open Social project for Coolify deployment",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "goalgorilla/open_social": "13.0.0-beta2",
        "drush/drush": "^13",
        "composer/installers": "~1.0 || ~2.0",
        "cweagans/composer-patches": "^1.7",
        "oomphinc/composer-installers-extender": "~1.0 || ~2.0"
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "html/web"
            }
        },
        "installer-paths": {
            "html/web/core": ["type:drupal-core"],
            "html/web/libraries/{$name}": ["type:drupal-library", "type:npm-asset", "type:bower-asset"],
            "html/web/modules/contrib/{$name}": ["type:drupal-module"],
            "html/web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "html/web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        },
        "installer-types": ["npm-asset", "bower-asset"],
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "drupal/core-composer-scaffold": true,
            "cweagans/composer-patches": true,
            "oomphinc/composer-installers-extender": true,
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
